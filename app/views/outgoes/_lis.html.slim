-outgoes.sort_by(&:date).reverse_each do |x|
  li
    =display x.amount
    |<> on
    =x.date
    -if x.recipient
      |<> to
      =x.recipient.name
    |<>
    =x.memo
    |<>
    =link_to 'Edit', edit_outgo_path(x)
    |<>
    =link_to 'Delete', delete_outgo_path(x)
    |<>
    -if x.reconciled?
      =button_to 'Unreconcile', unreconcile_outgo_path(x)
    -else
      =button_to 'Reconcile', reconcile_outgo_path(x)
